<RelativeLayout style="@style/ParentMatcher"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar style="@style/InvisibleProgress"
        android:id="@+id/leaderboard_progress"/>

    <LinearLayout style="@style/VerticalParentMatcher"
        android:id="@+id/leaderboard_inner_layout">

        <TextView style="@style/LeaderboardTitle"
            android:id="@+id/leaderboard_title" />

        <ScrollView style="@style/ParentMatcher"
            android:id="@+id/leaderboard_scroller">

            <LinearLayout style="@style/VerticalList"
                android:id="@+id/leaderboard_list">
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</RelativeLayout>