<resources>
    <style name="BetsTitle" parent="Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">10</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:text">@string/bets_matchday_title_default</item>
    </style>
    <style name="BetsLeaderboardButton" parent="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:text">@string/leaderboard_button_title</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="BetScroller">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">90</item>
    </style>
    <style name="BetsButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">10</item>
    </style>

    <style name="BetsNavButton" parent="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BetsLeftButton" parent="BetsNavButton">
        <item name="android:text">@string/left_arrow</item>
    </style>

    <style name="BetsRightButton" parent="BetsNavButton">
        <item name="android:text">@string/right_arrow</item>
    </style>

    <style name="BetsSubmitButton" parent="BetsNavButton">
        <item name="android:text">@string/bet_submit_button</item>
        <item name="android:layout_weight">4</item>
    </style>
</resources>
