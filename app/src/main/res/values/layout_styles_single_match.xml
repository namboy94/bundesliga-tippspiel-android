<resources>
    <style name="SingleMatchTitleFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SingleMatchTeamLogoImage">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:src">@color/button_bg</item>
    </style>
    <style name="SingleMatchTeamHeaderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="SingleMatchTeamHeaderTextDivider" parent="SingleMatchTeamHeaderText">
        <item name="android:text">@string/points_divider</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="SingleMatchSubtitle" parent="Title">
        <item name="android:gravity">left</item>
    </style>
    <style name="SingleMatchGoalSubtitle" parent="SingleMatchSubtitle">
        <item name="android:text">@string/match_goals_title</item>
    </style>
    <style name="SingleMatchBetsSubtitle" parent="SingleMatchSubtitle">
        <item name="android:text">@string/match_bets_title</item>
    </style>
    <style name="SingleMatchGoalsScrollerFrame">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="SingleMatchBetsScrollerFrame" parent="SingleMatchGoalsScrollerFrame">
        <item name="android:layout_weight">2</item>
    </style>
    <style name="SingleMatchUpdateButton" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:text">@string/update_button_text</item>
    </style>
</resources>
